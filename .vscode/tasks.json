{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "compile and run (CP mode)",
      "type": "shell",
      "command": "g++ -std=c++17 -o \"${fileDirname}\\${fileBasenameNoExtension}.exe\" \"${file}\" && \"${fileDirname}\\${fileBasenameNoExtension}.exe\" < \"${fileDirname}\\input.txt\" > \"${fileDirname}\\output.txt\" 2> \"${fileDirname}\\error.txt\"",
      "options": {
        "cwd": "${fileDirname}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
